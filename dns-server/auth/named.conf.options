acl "trusted" {
	10.80.240.0/20;
	10.8.0.0/24;
	172.30.0.0/20;
	127.0.0.1;
	2001:608:a01::/48;
};

options {
	directory "/var/cache/bind";


	recursion yes;
	allow-recursion { trusted; };
	allow-transfer { none; };
	dnssec-validation auto;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};

