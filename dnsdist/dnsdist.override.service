[Service]
User=_dnsdist
Group=_dnsdist
# let systemd create /run/dnsdist
RuntimeDirectory=dnsdist
ExecStart=
ExecStart=/usr/bin/dnsdist --supervised --disable-syslog
LimitNOFILE=500000
LimitNPROC=500000

AmbientCapabilities=CAP_NET_BIND_SERVICE CAP_NET_RAW CAP_BPF
CapabilityBoundingSet=CAP_NET_RAW CAP_BPF
