#
# {{ node_id }}
#
{% if salt['pillar.get']('netbox:role:name') %}
{%- set role = salt['pillar.get']('netbox:role:name') %}
{% else %}
{%- set role = salt['pillar.get']('netbox:device_role:name') %}
{% endif %}
{%- set roles = salt['pillar.get']('netbox:config_context:roles') %}
{%- set sites = salt['pillar.get']('netbox:config_context:sites') %}
{%- set address = salt['pillar.get']('netbox:primary_ip4:address') | regex_replace('/\d+$','') %}
{%- set address6 = salt['pillar.get']('netbox:primary_ip6:address') | regex_replace('/\d+$','') %}

{%- if 'monitoring' not in role %}
object Endpoint "{{ node_id }}" {
        host = "{{ node_id }}"
}

object Zone "{{ node_id }}" {
	endpoints = [ "{{ node_id }}" ]
	parent = "master"
}
{%- endif %}

object Host "{{ node_id }}" {
	import "generic-host"

	display_name = "{{ node_id }}"

	address = "{{ address }}"
	address6 = "{{ address6 }}"
        check_command = "hostalive"

	vars.os = "Linux"

	vars.roles = [
{%- for role in roles|sort %}
		"{{ role }}",
{%- endfor %}
	]

	vars.sites = [
{%- for site in sites|sort %}
		"{{ site }}",
{%- endfor %}
	]
}									
